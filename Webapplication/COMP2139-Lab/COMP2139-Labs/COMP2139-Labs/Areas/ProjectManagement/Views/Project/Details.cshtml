@model COMP2139_Labs.Areas.ProjectManagement.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<style>
    .project-details {
        max-width: 900px;
        margin: 2rem auto;
        background: #f8f9fa;
        border-radius: 0.75rem;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 20px;
    }

        .project-details .card-header {
            background-color: #007bff;
            color: #ffffff;
            font-size: 2rem;
            border-top-left-radius: 0.75rem;
            border-top-right-radius: 0.75rem;
            padding: 15px 20px;
        }

        .project-details dl dt {
            font-weight: bold;
            font-size: 1.25rem;
        }

        .project-details dl dd {
            margin-bottom: 0.5rem;
            font-size: 1.15rem;
        }

    .btn-custom {
        margin-right: 10px;
        font-size: 1.1rem;
        padding: 10px 20px;
    }
</style>

<div class="project-details">
    <div class="card-header">Project Details</div>
    <div class="card-body">
        <h3 class="card-title">@Html.DisplayFor(model => model.Name)</h3>
        <p class="card-text">@Html.DisplayFor(model => model.Description)</p>

        <dl class="row">
            <dt class="col-sm-3">Project ID</dt>
            <dd class="col-sm-9">@Model.ProjectId</dd>

            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.StartDate)</dd>

            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.EndDate)</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>

        <a asp-area="ProjectManagement" asp-controller="Project" asp-action="Edit" asp-route-id="@Model.ProjectId" class="btn btn-primary btn-custom">Edit</a>
        <a asp-area="ProjectManagement" asp-controller="Project" asp-action="Index" class="btn btn-secondary btn-custom">Back to Projects</a>
    </div>







    <div id="projectComments">
        <h3>Comments</h3>
        <div id="commentList" class="comments-container">
            @*comments will be loaded here*@
        </div>

        <form id="addCommentForm" class="mt-3">
            <input type="hidden" name="ProjectId" value="@Model.ProjectId" /> <!-- Place it here -->
            <div class="form-group">
                <textarea name="Content" class="form-control" placeholder="Add a comment ..."></textarea>
            </div>
            <button type="submit" class="btn btn-success">Post Comment</button>
        </form>



    </div>



</div>


@section Scripts {
    <script src="~/js/projectComment.js"></script>
    <script>$(document).ready(function () {
            var projectId = $('#projectComments input[name="ProjectId"]').val();
            loadComments(projectId);
        });</script>
}




