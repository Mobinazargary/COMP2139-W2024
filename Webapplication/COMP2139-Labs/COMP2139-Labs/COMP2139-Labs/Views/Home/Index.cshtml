@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<body class="bg-light">
    <div class="container py-5">
        <div class="text-center">
            <h1 class="display-4">Welcome to Project Collaborate</h1>
            <p class="lead">Your one-stop solution for managing projects and tasks efficiently.</p>
        </div>

        <div class="row justify-content-center mt-5">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="card-title">Project Management</h3>
                        <i class="bi bi-bar-chart-line fs-1"></i>
                        <p class="card-text">Organize and track all your projects in one place. Gain insights into project progress and status.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="card-title">Task Tracking</h3>
                        <i class="bi bi-list-check fs-1"></i>
                        <p class="card-text">Keep track of tasks, assign them to team members, and monitor deadlines to ensure timely completion.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="card-title">Collaborative Environment</h3>
                        <i class="bi bi-people fs-1"></i>
                        <p class="card-text">Foster collaboration among team members with shared goals, communication tools, and more.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
