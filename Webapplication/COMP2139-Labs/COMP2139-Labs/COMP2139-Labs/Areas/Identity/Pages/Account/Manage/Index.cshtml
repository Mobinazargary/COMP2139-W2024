
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
@*<p class="text-success">@Model.StatusMessage</p>*@

@*LAB 10*@
<!-- Include StatusMessage partial view -->
<partial name="_StatusMessage" model="@Model.StatusMessage" />
<!-- Include UserNameChangeLimitMessage partial view -->
<partial name="_StatusMessage" model="@Model.UserNameChangeLimitMessage" />


<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Input.Username"></label>
        <input asp-for="Input.Username" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.PhoneNumber"></label>
        <input asp-for="Input.PhoneNumber" class="form-control" />
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.FirstName"></label>
        <input asp-for="Input.FirstName" class="form-control" />
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.LastName"></label>
        <input asp-for="Input.LastName" class="form-control" />
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
    </div>

    <!-- Profile Picture Section -->
    <div class="form-group">
        <label asp-for="Input.ProfilePicture" class="form-label">Profile Picture</label>
        @if (Model.Input.ProfilePicture != null && Model.Input.ProfilePicture.Length > 0)
        {
            <img id="profilePicture" style="width: 350px; height: 350px; object-fit: cover; border-radius: 50%;" src="data:image/png;base64,@Convert.ToBase64String(Model.Input.ProfilePicture)" />
        }
        else
        {
            <img id="profilePicture" style="width: 350px; height: 350px; object-fit: cover; border-radius: 50%;" src="path/to/default/image.png" />
        }
        <input type="file" accept=".png, .jpg, .jpeg, .gif, .tif" asp-for="Input.ProfilePicture" class="form-control" style="border: 0px !important; padding: 0px; padding-top: 10px; padding-bottom: 30px;" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
