@model Flight
@{
    ViewData["Title"] = "Delete Flight";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
    }
</style>
<h2>Delete Flight</h2>

<div class="alert alert-danger bg-white">
    <!-- Change background color to white -->
    <h3>Are you Sure you want to Delete this flight?</h3>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Airline)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Airline)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DepartureCity)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DepartureCity)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ArrivalCity)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ArrivalCity)</dd>

        <!-- Add any other properties you wish to display -->

    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    @Html.HiddenFor(model => model.FlightId)

    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" asp-route-flightId="@Model.FlightId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
