<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JourneyJet</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        /* Apply background color to the entire header */
        body {
            background-image: linear-gradient(315deg, #48dbfb 0%, #d3d3d3 74%);
            padding-top: 20px; /* Adjust top padding as needed */
            padding-bottom: 20px; /* Adjust bottom padding as needed */
            margin: 0; /* Remove default margin */
        }
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        /* Override background color for header */
        header {
            background-color: #ffffff; /* Change background color to white */
            padding: 10px;
            margin-bottom: 30px;
        }

        /* Override background color for footer */
        footer {
            padding: 20px 0;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .navbar-brand img {
            height: 200px;
            width: auto;
        }

        .navbar-nav .nav-link {
            color: black; /* Change nav link color */
            font-weight: bold;
        }

            .navbar-nav .nav-link:hover {
                color: black; /* Change nav link hover color */
            }

        .content-wrapper {
            padding-top: 20px; /* Adjust top padding as needed */
            padding-bottom: 20px; /* Adjust bottom padding as needed */
        }

        .custom-nav-link {
            color: black !important; /* Set the color to black */
            font-family: 'Roboto', sans-serif; /* Use a better font */
            font-size: 18px; /* Adjust font size */
            text-transform: uppercase; /* Transform text to uppercase */
            padding: 10px 15px; /* Adjust padding for better shape */
        }

        .custom-nav-link:hover {
            color: #333 !important; /* Change color on hover */
            background-color: #f8f9fa; /* Add a subtle background color on hover */
        }
        .custom-nav-link.small {
            font-size: 14px; /* Adjust font size as needed */
            padding: 5px 10px; /* Adjust padding as needed */
        }

    </style>
</head>
<body class="home-page">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">
                <!-- Logo (Journey Jet) aligned to the left -->
                <a class="navbar-brand" href="#" style="font-family: 'Pacifico', cursive; font-size: 28px; color: #333; text-transform: uppercase;">
                    JourneyJet
                </a>
                <!-- Toggler button for small screens -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navigation links aligned to the right -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link custom-nav-link small" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-nav-link small" asp-area="" asp-controller="Hotel" asp-action="Index"><i class="fas fa-hotel"></i> Hotels</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-nav-link small" asp-area="" asp-controller="Flight" asp-action="Index"><i class="fas fa-plane"></i> Flights</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-nav-link small" asp-area="" asp-controller="CarRental" asp-action="Index"><i class="fas fa-car"></i> Car Rentals</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>







    <div class="content-wrapper">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2024 - <a >JourneyJet Company</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
