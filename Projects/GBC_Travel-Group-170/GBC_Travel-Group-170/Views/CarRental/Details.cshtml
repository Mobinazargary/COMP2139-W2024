@model CarRental
@{
    ViewData["Title"] = "Car Rental Detail";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>
</head>

<body>

    <section class="about top bg-light text-dark py-5 shadow">
        <div class="container flex">
            <div class="left">
                <div class="heading">
                 
                    <h2 class="font-weight-bold"><i class="fas fa-car"></i>@Model.Brand @Model.Model</h2>
                </div>
                <p>
                    Year: @Model.Year <br>
                    Price Per Day: $@Model.PricePerDay <br>
                    Location: @Model.Location
                </p>
                <a asp-action="Reserve" asp-controller="CarRentalReservation" asp-route-reserveId="@Model.CarRentalId" class="btn btn-primary">Make Reservation</a>
            </div>
            
        </div>
    </section>
</body>
