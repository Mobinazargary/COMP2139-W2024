@{
    ViewData["Title"] = "Home";
}

<style>
    /* Custom CSS for centering the cards */
    body, html {
        background-image: url('https://www.rainbowworldtours.com/blog/wp-content/uploads/2017/11/Advice-That-Will-Help-You-With-Your-Travels.jpg');
        background-size: cover;
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .welcome-board {
        background: linear-gradient(to right, #2980B9, #6DD5FA); /* Gradient background */
        border: 2px solid #ffffff; /* Border color */
        padding: 20px;
        margin-bottom: 100px;
        text-align: center;
        border-radius: 10px; /* Border radius */
    }

    .welcome-text {
        color: #ffffff; /* Text color for Welcome */
    }

    .journey-text {
        color: #000000; /* Text color for JourneyJet */
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80%; /* Adjust height as needed */
    }

    .card {
        width: 300px; /* Adjust the width of the cards */
        border-radius: 10px; /* Border radius */
    }

    .card-body {
        border-radius: 10px; /* Border radius */
    }

    .title {
        font-weight: bold;
        font-size: 24px; /* Adjust font size as needed */
    }
</style>

<div class="welcome-board">
    <h2 class="title">
        <span class="welcome-text">Welcome to </span>
        <span class="journey-text">JourneyJet!</span>
    </h2>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card bg-info text-white rounded-lg h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title text-center"><i class="fas fa-plane fa-2x"></i> Flight</h5> <!-- Larger icon -->
                        <p class="card-text text-center">Book your flights with ease.</p>
                    </div>
                    <div class="text-center">
                        <a href="@Url.Action("Index", "Flight")" class="btn btn-light">Explore</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-primary text-white rounded-lg h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title text-center"><i class="fas fa-hotel fa-2x"></i> Hotel</h5> <!-- Larger icon -->
                        <p class="card-text text-center">Find the perfect accommodation.</p>
                    </div>
                    <div class="text-center">
                        <a href="@Url.Action("Index", "Hotel")" class="btn btn-light">Explore</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white rounded-lg h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title text-center"><i class="fas fa-car fa-2x"></i> Car Rental</h5> <!-- Larger icon -->
                        <p class="card-text text-center">Rent a car for your journey.</p>
                    </div>
                    <div class="text-center">
                        <a href="@Url.Action("Index", "CarRental")" class="btn btn-light">Explore</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
