@model List<Project>
@{
    //Razor block
    ViewData["Title"] = "Projects";
    //Name of this page, ALWAYS SET THE TITLE
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.projectID</td>
                    <td>@project.Name</td>
                    <td>@project.Description</td>

                </tr>

            }

        </tbody>

    </table>



}
else
{
    <p>No project available</p>
}
